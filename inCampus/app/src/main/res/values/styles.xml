<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/darker</item>
        <item name="colorAccent">@color/darker</item>

        <item name="android:windowBackground">@drawable/background</item>

        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/darker</item>
        <item name="colorControlHighlight">@color/darker</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="colorButtonNormal">@color/green_darker</item>
        <item name="android:colorButtonNormal">@color/green</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/darker</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:background">@color/green_darker</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
